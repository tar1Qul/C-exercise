#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];
    int characters = 0, words = 0, lines = 0;

    printf("Enter a string (Press Enter then Ctrl+D to finish): ");

    while (gets(str, sizeof(str), stdin) != NULL) {
        lines++;
        characters += strlen(str);

        char *token = strtok(str, " \t\n");
        while (token != NULL) {
            words++;
            token = strtok(NULL, " \t\n");
        }
    }

    printf("\nNumber of characters: %d\n", characters - lines + 1);
    printf("Number of words: %d\n", words);
    printf("Number of lines: %d\n", lines);

    return 0;
}
