#include <stdio.h>

int main() {
    int n, i;
    float sum = 0, average, max = 0, min = 100;
    
    // Prompt user for the number of students
    printf("How many students will you give? ");
    scanf("%d", &n);
    
    // Arrays to store names and marks
    char names[n][50];
    int marks[n];
    
    // Read names and marks
    for(i = 0; i < n; i++) {
        printf("\nEnter first name: ");
        scanf("%s", names[i]);
        
        printf("Provide mark: ");
        scanf("%d", &marks[i]);
        
        // Calculate sum for average
        sum += marks[i];
        
        // Find maximum and minimum marks
        if (marks[i] > max)
            max = marks[i];
        if (marks[i] < min)
            min = marks[i];
    }
    
    // Calculate average
    average = sum / n;
    
    // Print names and marks side by side
    printf("\nHere are the students:\n");
    for(i = 0; i < n; i++) {
        printf("%s %d\n", names[i], marks[i]);
    }
    
    // Print average, maximum, and minimum marks
    printf("\nAverage mark is: %.6f\n", average);
    printf("Minimum mark is: %d\n", (int)min);
    printf("Maximum mark is: %d\n", (int)max);
    
    return 0;
}
