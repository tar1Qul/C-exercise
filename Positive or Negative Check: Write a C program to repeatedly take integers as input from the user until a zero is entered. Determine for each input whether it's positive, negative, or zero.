#include <stdio.h>
int main()
{
    int num;

    while (1)
        {
        printf("Enter an integer:  ");
        scanf("%d", &num);

        if (num == 0)
        {
            printf("You entered zero. Exiting the program...\n");
            break;
        }
        else if (num > 0)
        {
            printf("%d is a positive number.\n", num);
        }
        else
        {
            printf("%d is a negative number.\n", num);
        }
    }

    return 0;
}
