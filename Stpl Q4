#include <stdio.h>

int main() {
    int n, i;
    float sum = 0, average;
    
    // Prompt user for the number of items
    printf("How many numbers will you give? ");
    scanf("%d", &n);
    
    // Create an array of size n to store the numbers
    float numbers[n];
    
    // Prompt user to enter each number and calculate sum
    for(i = 0; i < n; i++) {
        printf("Enter number: ");
        scanf("%f", &numbers[i]);
        sum += numbers[i];
    }
    
    // Calculate average
    average = sum / n;
    
    // Output sum and average
    printf("\nThe sum is: %.2f\n", sum);
    printf("The average is: %.2f\n", average);
    
    return 0;
}
