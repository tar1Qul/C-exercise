taskl

#include <stdio.h>

struct Student {
    char Course_Name[20];
    float Mark;
    int StudentID;
    char Student_Name[20];
    float CGPA;
};

struct Enrollment {
    int Enrollment_Year;
    int Enrollment_Month;
    int Enrollment_Day;
};

int main() {
    FILE *file;
    file = fopen("marks.txt", "r");

    if (file == NULL) {
        printf("Error opening the file.\n");
        return 1;
    }

    struct Student student;
    struct Enrollment enrollment;
    double total_marks = 0;
    while (fscanf(file, "%s %f %d %s %f %d %d %d", student.Course_Name, &student.Mark, &student.StudentID, student.Student_Name, &student.CGPA, &enrollment.Enrollment_Year, &enrollment.Enrollment_Month, &enrollment.Enrollment_Day) != EOF) {
        total_marks += student.Mark;
    }

    printf("Total Marks: %.2lf\n", total_marks);
    fclose(file);
    return 0;
}







task 2


#include <stdio.h>

struct Student {
    char Course_Name[20];
    float Mark;
    int StudentID;
    char Student_Name[20];
    float CGPA;

    struct Enrollment {
    int Enrollment_Year;
    int Enrollment_Month;
    int Enrollment_Day;
};
};



struct Student student;
struct Enrollment enrollment;

int main() {
    FILE *file;
    float totalCGPA = 0;
    int count = 0;

    file = fopen("marks.txt", "r");

    while (fscanf(file, "%s %f %d %s %f %d %d %d", student.Course_Name, &student.Mark, &student.StudentID, student.Student_Name, &student.CGPA, &enrollment.Enrollment_Year, &enrollment.Enrollment_Month, &enrollment.Enrollment_Day) != EOF) {
        totalCGPA += student.CGPA;
        count++;
    }

    printf("Average CGPA of all students: %.2f\n", totalCGPA / count);

    fclose(file);

    return 0;
}
