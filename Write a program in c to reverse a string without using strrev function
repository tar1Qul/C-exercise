#include <stdio.h>
#include <string.h>

int main() {
    char str1[1000];
    char str2[1000];

    printf("Enter the string: ");
    gets(str1);

    int i =0,j, len = 0 ;

    while (str1[i] != '\0')
    {

    i++;
    len++;

    }

    for (j=0, i = len -1; i>=0; i--, j++){

     str2[j] =  str1[i] ;

    }

     str2[j] = '\0';

      printf("\nstr1: %s",str1);
      printf("\nstr2: %s",str2);


          printf("\n\n\n ");


    return 0;
}
