#include <stdio.h>
int main()
{
    int num;

    while (1)
        {
        printf("Enter an integer: ");
        scanf("%d", &num);

        if (num < 0)
        {
            printf("You entered a negative number. Exiting the program...\n");
            break;
        }
        else if (num % 2 == 0)
        {
            printf("%d is an even number.\n", num);
        }
        else
        {
            printf("%d is an odd number.\n", num);
        }
    }

    return 0;
}
