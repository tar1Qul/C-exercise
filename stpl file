problem 1
#include <stdio.h>


int main() {
    FILE *fptm;
    fptm = fopen("233014211.txt", "r");
    int nums[40];

    if (fptm == NULL) {
        printf("\nSorry, cannot open the input file for reading numbers");
        return 0;
    }

    char line[100];
    int count = 0;
    printf("The numbers read are:\n");

    while (count < 40 && fgets(line, 100, fptm)) {
        int num = atoi(line);
        printf("%d\n", num);
        nums[count] = num;
        count++;
    }

    printf("No of marks read: %d\n", count);
    int sum = 0;
    int average, minimum, maximum;

     for (int i = 0; i < count; i++) {
        printf("%d\n", nums[i]);
        sum += nums[i];


        if (nums[i] < minimum)
            minimum = nums[i];
        if (nums[i] > maximum)
            maximum = nums[i];
    }

    average = sum / count;

    printf("Sum: %d\n", sum);
    printf("Average: %d\n", average);
    printf("Minimum: %d\n", minimum);
    printf("Maximum: %d\n", maximum);

    fclose(fptm);
    return 0;
}


problem 2
#include <stdio.h>

int main() {
    FILE *names_file;
    FILE *grades_file;
    char names[MAX_STUDENTS][MAX_NAME_LENGTH];
    int grades[MAX_STUDENTS];
    int num_students = 0;

    // Open names file for reading
    names_file = fopen("233014211.txt", "r");
    if (names_file == NULL) {
        printf("Error: Could not open the names file.\n");
        return 1;
    }

    // Read names from file into array
    while (fscanf(names_file, "%s", names[num_students]) == 1) {
        num_students++;
        if (num_students >= MAX_STUDENTS) {
            printf("Maximum number of students reached.\n");
            break;
        }
    }

    // Close names file
    fclose(names_file);

    // Open grades file for reading
    grades_file = fopen("grades.txt", "r");
    if (grades_file == NULL) {
        printf("Error: Could not open the grades file.\n");
        return 1;
    }

    // Read grades from file into array
    for (int i = 0; i < num_students; i++) {
        if (fscanf(grades_file, "%d", &grades[i]) != 1) {
            printf("Error reading grades file.\n");
            return 1;
        }
    }

    // Close grades file
    fclose(grades_file);

    // Print names and grades side by side
    printf("Names\t\tGrades\n");
    printf("------\t\t------\n");
    for (int i = 0; i < num_students; i++) {
        printf("%-15s\t%d\n", names[i], grades[i]);
    }

    return 0;
}



problem 4

#include <stdio.h>
#include <stdlib.h>

#define MAX_STUDENTS 100

void addBonus(int marks[], int bonus, int numStudents) {
    for (int i = 0; i < numStudents; i++) {
        marks[i] += bonus;
    }
}

int main() {
    char names[MAX_STUDENTS][50];
    int marks[MAX_STUDENTS];
    int numStudents = 0;

    FILE *namesFile = fopen("names.txt", "r");
    FILE *marksFile = fopen("marks.txt", "r");

    if (namesFile == NULL || marksFile == NULL) {
        printf("Error opening files.\n");
        return 1;
    }

    while (fscanf(namesFile, "%s", names[numStudents]) != EOF && fscanf(marksFile, "%d", &marks[numStudents]) != EOF) {
        numStudents++;
    }

    fclose(namesFile);
    fclose(marksFile);

    for (int i = 0; i < numStudents; i++) {
        printf("%s %d\n", names[i], marks[i]);
    }

    char choice;
    printf("Do you want to give the students a bonus? (y/n): ");
    scanf(" %c", &choice);

    if (choice == 'y' || choice == 'Y') {
        int bonus;
        printf("Enter the bonus amount: ");
        scanf("%d", &bonus);

        addBonus(marks, bonus, numStudents);

        printf("Updated Marks:\n");
        for (int i = 0; i < numStudents; i++) {
            printf("%s %d\n", names[i], marks[i]);
        }
    }

    return 0;
}

