//p1

#include <stdio.h>

struct process {
    int pid, at, bt, wt, tat, ct;
};

int main() {
    int n, i;
    float total_tat = 0, total_wt = 0;

    printf("Please enter the number of processes: ");
    scanf("%d", &n);

    struct process p[n];

    for (i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("\nPlease enter the arrival time for process %d: ", p[i].pid);
        scanf("%d", &p[i].at);

        printf("Please enter the burst time for process %d: ", p[i].pid);
        scanf("%d", &p[i].bt);
    }

    int time = 0;
    for (i = 0; i < n; i++) {
        if (time < p[i].at) {
            time = p[i].at;  
        }
        time += p[i].bt;
        p[i].ct = time;
        p[i].tat = p[i].ct - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;

        total_tat += p[i].tat;
        total_wt += p[i].wt;
    }

    
    printf("\nProcess\tAT\tBT\tTAT\tWT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n", 
               p[i].pid, p[i].at, p[i].bt, p[i].tat, p[i].wt);
    }

    printf("\nAverage Turnaround Time = %.2f", total_tat / n);
    printf("\nAverage Waiting Time = %.2f\n", total_wt / n);

    return 0;
}



//i dont know what is this

#include <stdio.h>

struct process {
    int pid;  // Process ID
    int at;   // Arrival Time
    int bt;   // Burst Time
    int ct;   // Completion Time
    int tat;  // Turnaround Time
    int wt;   // Waiting Time
};

int main() {
    int n, i;
    float total_tat = 0, total_wt = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct process p[n];

    // Taking input
    for (i = 0; i < n; i++) {
        p[i].pid = i + 1;

        printf("\nEnter arrival time for P%d: ", p[i].pid);
        scanf("%d", &p[i].at);

        printf("Enter burst time for P%d: ", p[i].pid);
        scanf("%d", &p[i].bt);
    }

    // Sorting by Arrival Time (Bubble Sort)
    for (i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (p[j].at > p[j + 1].at) {
                struct process temp = p[j];
                p[j] = p[j + 1];
                p[j + 1] = temp;
            }
        }
    }

    // Calculating CT, TAT, WT
    int time = 0;
    for (i = 0; i < n; i++) {
        if (time < p[i].at) {
            time = p[i].at; // Wait for the process to arrive
        }

        time += p[i].bt;
        p[i].ct = time;
        p[i].tat = p[i].ct - p[i].at;
        p[i].wt = p[i].tat - p[i].bt;

        total_tat += p[i].tat;
        total_wt += p[i].wt;
    }

    // Output table
    printf("\nProcess\tAT\tBT\tCT\tTAT\tWT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].pid, p[i].at, p[i].bt, p[i].ct, p[i].tat, p[i].wt);
    }

    // Average times
    printf("\nAverage Turnaround Time = %.2f\n", total_tat / n);
    printf("Average Waiting Time = %.2f\n", total_wt / n);

    return 0;
}


